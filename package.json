{
  "name": "pxs-ng-core",
  "version": "1.2.11",
  "type": "module",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "build:core": "ng build core --configuration production",
    "version:patch": "npm version patch --prefix projects/core",
    "version:minor": "npm version minor --prefix projects/core",
    "version:major": "npm version major --prefix projects/core",
    "publish:core": "ng build core && copy .npmrc dist\\core\\.npmrc && cd dist/core && npm publish",
    "lint": "eslint projects/. --ext .ts,.html --cache",
    "lint:fix": "eslint projects/. --ext .ts,.html --fix --cache",
    "lint:ci": "eslint projects/. --ext .ts,.html --max-warnings=0",
    "format": "prettier projects/. --write",
    "format:check": "prettier projects/. --check",
    "prepare": "husky install",
    "deps:check": "node ./scripts/remove-unused.mjs",
    "deps:apply": "node ./scripts/remove-unused.mjs --apply"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "lint-staged": {
    "*.{ts,html}": [
      "eslint --fix --cache"
    ],
    "*.{ts,json,md,scss,css}": [
      "prettier --write",
      "prettier projects/. --write"
    ]
  },
  "private": false,
  "publishConfig": {
    "registry": "https://pkgs.dev.azure.com/cadai/Socle/_packaging/PXS-NG-CORE/npm/registry/"
  },
  "dependencies": {
    "@angular/animations": "20.1.7",
    "@angular/cdk": "20.1.6",
    "@angular/common": "20.1.7",
    "@angular/compiler": "20.1.7",
    "@angular/core": "20.1.7",
    "@angular/forms": "20.1.7",
    "@angular/material": "20.1.6",
    "@angular/platform-browser": "20.1.7",
    "@angular/router": "20.1.7",
    "@dagrejs/dagre": "^1.1.5",
    "@dagrejs/graphlib": "^2.2.4",
    "@ngrx/effects": "20.0.0",
    "@ngrx/store": "20.0.0",
    "@ngx-translate/core": "17.0.0",
    "@ngx-translate/http-loader": "17.0.0",
    "@swimlane/ngx-graph": "^11.0.0",
    "chart.js": "4.5.0",
    "chartjs-adapter-luxon": "1.3.1",
    "d3": "7.9.0",
    "d3-shape": "^3.2.0",
    "keycloak-js": "26.2.0",
    "luxon": "3.7.1",
    "ngrx-store-localstorage": "20.0.0",
    "rxjs": "~7.8.0",
    "tslib": "2.3.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@angular-eslint/eslint-plugin": "20.1.1",
    "@angular-eslint/eslint-plugin-template": "20.1.1",
    "@angular-eslint/template-parser": "20.1.1",
    "@angular/build": "20.1.6",
    "@angular/cli": "20.1.6",
    "@angular/compiler-cli": "20.1.7",
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@types/jasmine": "~5.1.0",
    "@types/luxon": "3.7.1",
    "@typescript-eslint/eslint-plugin": "8.40.0",
    "@typescript-eslint/parser": "8.40.0",
    "depcheck": "1.4.7",
    "eslint": "9.33.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "husky": "9.1.7",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "16.1.5",
    "ng-packagr": "20.1.0",
    "prettier": "3.6.2",
    "typescript": "~5.8.2"
  }
}
